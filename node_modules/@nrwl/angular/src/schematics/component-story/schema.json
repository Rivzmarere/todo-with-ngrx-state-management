{
  "$schema": "http://json-schema.org/schema",
  "id": "component-story",
  "type": "object",
  "properties": {
    "libPath": {
      "type": "string",
      "description": "Path to the library",
      "examples": ["libs/ui-samples"]
    },
    "moduleFileName": {
      "type": "string",
      "description": "File name of the module that declares this component",
      "examples": ["ui-samples.module.ts"],
      "x-deprecated": true
    },
    "ngModuleClassName": {
      "type": "string",
      "description": "Class name of the module that declares this component",
      "examples": ["UiSamplesModule"],
      "x-deprecated": true
    },
    "componentName": {
      "type": "string",
      "description": "Class name of the component",
      "examples": ["AwesomeComponent"]
    },
    "componentPath": {
      "type": "string",
      "description": "Relative path to the component file from the library root",
      "examples": ["awesome"]
    },
    "componentFileName": {
      "type": "string",
      "description": "Component file name without the .ts extension",
      "examples": ["awesome.component"]
    }
  },
  "required": ["libPath", "componentName", "componentPath", "componentFileName"]
}
